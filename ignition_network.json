{
    "ignition": { "version": "2.0.0" },
    "networkd": {
        "units": [
            {
                "name": "00-eth.network",
                "contents": "[Match]\nName=eth*\n\n[Network]\nBond=bond0"
            },
            {
                "name": "10-bond0.netdev",
                "contents": "[NetDev]\nName=bond0\nKind=bond"
            },
            {
                "name": "20-bond0.120.netdev",
                "contents": "[NetDev]\nName=bond0.120\nKind=vlan"
            },
            {
                "name": "30-bond0.120.network",
                "contents": "[Match]\nName=bond0.120\n\n[Network]\nAddress=10.0.0.9\nDNS=10.0.0.2\nGateway=255.255.255.0"
            }
        ]
    }
}